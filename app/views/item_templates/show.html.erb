<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Item #<%= @item.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/items" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/items/<%= @item.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit item
        </a>
      </div>

      <div class="col">
        <a href="/delete_item/<%= @item.id %>" class="btn btn-block btn-outline-secondary">
          Delete item
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Title
      </dt>
      <dd>
        <%= @item.title %>
      </dd>

      <dt>
        Description
      </dt>
      <dd>
        <%= @item.description %>
      </dd>

      <dt>
        Seller
      </dt>
      <dd>
        <%= @item.seller_id %>
      </dd>

      <dt>
        Price
      </dt>
      <dd>
        <%= @item.price %>
      </dd>

      <dt>
        Address
      </dt>
      <dd>
        <%= @item.address %>
      </dd>

      <dt>
        Photo
      </dt>
      <dd>
        <%= @item.photo %>
      </dd>

      <dt>
        Location
      </dt>
      <dd>
        <%= @item.location_id %>
      </dd>

      <dt>
        Status
      </dt>
      <dd>
        <%= @item.status_id %>
      </dd>

      <dt>
        Item type
      </dt>
      <dd>
        <%= @item.category_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@item.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@item.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

