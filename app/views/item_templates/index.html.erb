        <td>
          <%= item.seller_id %>
        </td>

        <td>
          <%= item.price %>
        </td>

        <td>
          <%= item.address %>
        </td>

        <td>
          <%= item.photo %>
        </td>

        <td>
          <%= item.location_id %>
        </td>

        <td>
          <%= item.status_id %>
        </td>

        <td>
          <%= item.category_id %>
        </td>

        <td>
          <%= time_ago_in_words(item.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(item.updated_at) %> ago
        </td>

        <td>
          <a href="/items/<%= item.id %>">
